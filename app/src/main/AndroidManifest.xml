<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".view.hilt.LogApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewCollage"
        tools:targetApi="31">
        <activity
            android:name=".compose.RecompositionActivity"
            android:exported="false"
            android:label="@string/title_activity_recomposition"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.SegmentActivity"
            android:exported="false"
            android:label="@string/title_activity_segment"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.SelectPhotoActivity"
            android:exported="false"
            android:label="@string/title_activity_select_photo"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.GalleryActivity"
            android:exported="false"
            android:label="@string/title_activity_gallery"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".view.FlowActivity"
            android:exported="false" />
        <activity
            android:name=".view.hilt.ui.HiltActivity"
            android:exported="false" />
        <activity
            android:name=".compose.TestLayoutActivity"
            android:exported="false"
            android:label="@string/title_activity_test_layout"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NewCollage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".compose.AnimationActivity"
            android:exported="false"
            android:label="@string/title_activity_animation"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.StateActivity"
            android:exported="false"
            android:label="@string/title_activity_state"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.MySootheActivity"
            android:exported="false"
            android:label="@string/title_activity_my_soothe"
            android:theme="@style/Theme.MySoothe" />
        <activity
            android:name=".compose.CodeLabActivity"
            android:exported="false"
            android:label="@string/title_activity_codelab"
            android:theme="@style/Theme.NewCollage" />
        <activity
            android:name=".compose.ComposeActivity"
            android:exported="false" />
    </application>

</manifest>